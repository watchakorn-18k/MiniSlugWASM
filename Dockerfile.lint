FROM debian:bullseye-slim

# Install Linting Tools and Dependencies
RUN apt-get update && apt-get install -y \
    clang \
    clang-tidy \
    cppcheck \
    libsdl2-dev \
    libsdl2-mixer-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Default command (can be overridden)
CMD ["clang-tidy", "--version"]
